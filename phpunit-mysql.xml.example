<?xml version="1.0" encoding="UTF-8"?>
<!--
    MySQL Testing Configuration Template

    SETUP INSTRUCTIONS:
    1. Copy this file: cp phpunit-mysql.xml.example phpunit-mysql.xml
    2. Edit phpunit-mysql.xml with your local database credentials
    3. Run tests: composer test:mysql

    Usage:
    Run all tests: composer test:mysql
    Run specific file: composer test:mysql tests/Feature/YourTest.php

    Database: aqarcrm_test
    WARNING: RefreshDatabase will DELETE ALL DATA in this database!
-->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         displayDetailsOnTestsThatTriggerWarnings="true"
         displayDetailsOnTestsThatTriggerDeprecations="true"
         displayDetailsOnTestsThatTriggerErrors="true"
         displayDetailsOnTestsThatTriggerNotices="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>
        <!-- MySQL Database Settings - EDIT THESE IN YOUR LOCAL phpunit-mysql.xml -->
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_HOST" value="127.0.0.1"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="aqarcrm_test"/>
        <env name="DB_USERNAME" value="root"/>  <!-- Change to your MySQL username -->
        <env name="DB_PASSWORD" value=""/>      <!-- Change to your MySQL password -->
    </php>
</phpunit>
